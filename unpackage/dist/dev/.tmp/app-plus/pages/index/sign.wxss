
.eject {
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top: 0;
	background: rgba(0, 0, 0, .5)
}
.box {
	width: 600rpx;
	max-height: 580rpx;
	background: #fff;
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	margin: auto;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
}
.box>view {
	width: 560rpx;
	margin: 0 auto;
}
.box>view:nth-child(1) {
	font-size: 32rpx;
	color: #333;
	text-align: center;
	padding: 20rpx 0;
}
.box>view:nth-child(2) {
	font-size: 28rpx;
	color: #888;
	text-align: left;
	line-height: 2;
}
.box>view:nth-child(3) {
	font-size: 32rpx;
	color: #CCA366;
	text-align: center;
	margin-top: 20rpx;
	border-top: 2rpx solid #f7f7f7;
	padding: 20rpx 0;
}
.section1 {
	width: 750rpx;
	height: 360rpx;
	-webkit-border-bottom-left-radius: 40rpx;
	        border-bottom-left-radius: 40rpx;
	-webkit-border-bottom-right-radius: 40rpx;
	        border-bottom-right-radius: 40rpx;
	padding: 40rpx 0;
	background: -webkit-gradient(linear, left top, left bottom, from(#CEA15A), to(#F3CB84));
	background: -webkit-linear-gradient(#CEA15A, #F3CB84);
	background: -o-linear-gradient(#CEA15A, #F3CB84);
	background: linear-gradient(#CEA15A, #F3CB84);
	text-align: center;
	position: relative;
}
.tip {
	width: 180rpx;
	position: absolute;
	right: 0;
	top: 20rpx;
	text-align: center;
	color: #fff;
	font-size: 28rpx;
}
.date {
	font-size: 28rpx !important;
	color: #888 !important;
}
.section1 .title {
	font-size: 32rpx;
	color: #ffffff;
	line-height: 1.6em;
	margin-top: 10rpx;
}
.section1 .num {
	font-size: 64rpx;
	color: #ffffff;
	line-height: 1.6em;
	font-weight: bold;
	margin-bottom: 30rpx;
}
.section1 .want {
	color: #FF5533;
	font-size: 32rpx;
	border: 1px solid #FF5533;
	-webkit-border-radius: 16rpx;
	        border-radius: 16rpx;
	padding: 10rpx 40rpx;
}
.section2 {
	position: relative;
	top: -80rpx;
}
.section_title {
	color: #333333;
	font-size: 28rpx;
	font-weight: bold;
	line-height: 3em;
	padding: 0 10rpx;
}
.section_title switch,
.section_title ._span {
	float: right;
	margin-right: 10rpx;
}
.section_title switch {
	-webkit-transform: scale(0.8);
	    -ms-transform: scale(0.8);
	        transform: scale(0.8);
}
.item {
	text-align: center;
	font-size: 24rpx;
	color: #888888;
	font-weight: 500;
	background: #f9f9f9;
	-webkit-border-radius:6rpx;
	        border-radius:6rpx;
	overflow:hidden;
	padding: 16rpx 20rpx 11rpx 20rpx;
}
.item image{
	width:40rpx;
	height:40rpx;
	margin-top:5rpx;
}
.item .num {
	width: 70rpx;
	height: 70rpx;
	line-height: 70rpx;
	margin: 0 auto;
	font-size: 32rpx;
	background: #CCA366;
	color: #FFFFFF;
	-webkit-border-radius: 35rpx;
	        border-radius: 35rpx;
	text-align: center;
}
.point {
	width: 20rpx;
	height: 20rpx;
	margin: 10rpx auto;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
}
.red {
	background: #FF5533;
}
.green {
	background: #E6E6E6;
}
.line {
	height: 1px;
	background: #E6E6E6;
	width: 600rpx;
	position: absolute;
	bottom: 58rpx;
	left: 50rpx;
	z-index: 0;
}
.signBtn {
	background: -webkit-gradient(linear, left top, left bottom, from(#EA6F53), to(#D03C29));
	background: -webkit-linear-gradient(top, #EA6F53, #D03C29);
	background: -o-linear-gradient(top, #EA6F53, #D03C29);
	background: linear-gradient(180deg, #EA6F53, #D03C29);
	width: 270rpx;
	height: 270rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	color: #FFFFFF;
	line-height: 270rpx;
	font-size: 32rpx;
	text-align: center;
}
.tip .crl {
	display: inline-block;
	width: 30rpx;
	height: 30rpx;
	background: #fff;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	text-align: center;
	line-height: 30rpx;
	color: #CCA366;
	margin-left: 5rpx;
}

