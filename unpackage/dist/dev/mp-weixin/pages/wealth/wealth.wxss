
.section1{padding: 20rpx; width: 670rpx; background: -webkit-gradient(linear,left top, left bottom,from(#CEA15A),to(#F3CB84)); background: -o-linear-gradient(#CEA15A,#F3CB84); background: linear-gradient(#CEA15A,#F3CB84);}
.section1 .title{font-size: 32rpx; color: #ffffff; line-height: 1.6em; margin-top: 10rpx; text-align: left;}
.section1 .num{font-size: 64rpx;color: #ffffff; line-height: 1.6em; font-weight: bold;text-align: left;}
