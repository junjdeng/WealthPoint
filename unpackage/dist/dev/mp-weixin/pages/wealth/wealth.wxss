border-radius: 16rpx; margin-top: 10rpx; padding: 30rpx 5rpx;text-align: center;}
.section1 .total_card .num{font-size: 32rpx; color: #333333; font-weight: bold;text-align: center;}
.section1 .total_card .title{font-size: 28rpx; color: #666666;text-align: center;}
.section1 .total_card .line{background:#CCA366; display: inline-block; width: 1px; height: 50rpx;}
.section1 .count{font-size: 24rpx;color: #ffffff; line-height: 1.6em; padding-left: 100rpx;}
.section1 .count ._span{float: right; padding-right: 40rpx;}
